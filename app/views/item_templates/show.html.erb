<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Item #<%= @item.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/items" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link item start -->
      <div class="col">
        <a href="/items/<%= @item.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit item
        </a>
      </div>
      <!-- Edit link item end -->

      <!-- Delete link item start -->
      <div class="col">
        <a href="/delete_item/<%= @item.id %>" class="btn btn-block btn-outline-secondary">
          Delete item
        </a>
      </div>
      <!-- Delete link item end -->
    </div>

    <dl>
      <dt>
        Restaurant
      </dt>
      <!-- Display restaurant_id start -->
      <dd>
        <% if @item.restaurant.present? %>
          <a href="/restaurants/<%= @item.restaurant_id %>">
            <%= @item.restaurant.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display restaurant_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@item.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@item.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "item_templates/item_reviews" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "item_templates/item_favorites" %>
  </div>
</div>
<!-- Show Page Customization end -->
