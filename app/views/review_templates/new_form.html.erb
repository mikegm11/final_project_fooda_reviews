<h1>
  Add a new review
</h1>


<hr>

<form action="/create_review" method="post">

  <div class="form-group">
    <label for="review">
      Review
    </label>

    <input type="text" id="review" name="review" class="form-control">
  </div>

  <div class="form-group">
    <label for="item_id">
      Item
    </label>

    <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :restaurant_id, @review.item_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>
